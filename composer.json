{
  "name": "horyzone/gcp",
  "description": "Application de gestion de congÃ©s professionnel",
  "keywords": [
    "skeleton",
    "slim",
    "twig",
    "doctrine",
    "validation",
    "csrf",
    "token",
    "dotenv",
    "tracy",
    "session"
  ],
  "homepage": "https://github.com/Horyzone/gcp",
  "license": "MIT",
  "authors": [
    {
      "name": "SimonDevelop",
      "email": "contact@simon-micheneau.fr"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/src/",
      "Commands\\": "config/commands/"
    },
    "files": [
      "config/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "ext-json": "*",
    "php": ">=7.2",
    "slim/slim": "^4.5",
    "slim/psr7": "^1.0",
    "php-di/php-di": "^6.1",
    "slim/csrf": "^1.0",
    "slim/twig-view": "3.0",
    "respect/validation": "^1.1",
    "symfony/console": "^4.4",
    "digitalnature/php-ref": "^1.3",
    "vlucas/phpdotenv": "^4.1",
    "monolog/monolog": "^2.0",
    "doctrine/orm": "^2.7",
    "doctrine/data-fixtures": "^1.4",
    "twig/extensions": "^1.5",
    "symfony/twig-bridge": "^4.4",
    "symfony/yaml": "^4.4",
    "socialconnect/auth": "2.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5",
    "phpunit/phpunit": "^8.5"
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "start": "php -S localhost:8080 -t public public/server.php",
    "phpcs": "phpcs -s",
    "phpunit": "phpunit --colors --do-not-cache-result",
    "test": [
      "@phpunit",
      "@phpcs"
    ]
  }
}
