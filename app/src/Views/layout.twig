<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>GCP - {{ title }}</title>
    {% block stylesheet %}
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.2/cosmo/bootstrap.min.css"
      integrity="sha512-+h8cw6xqOHLSqnr/8uqa7lxba0o6kyUCgFb+lF2NLtjN+wIv2BXXg5aAPH7Ag/8Zx6HkqtmYbgaRCGqip2aZrw==" crossorigin="anonymous" />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
      integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
      <link rel="stylesheet" href="{{ url_for('home') }}assets/css/main.css"><!-- main.css for dev -->
      <!-- Favicon -->
      <link rel="shortcut icon" href="{{ url_for('home') }}assets/img/favicon.png">
    {% endblock %}
  </head>
  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="{{ url_for('home') }}">
        <img id="logo-navbar" class="d-inline-block align-top" alt="gcp">
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbar">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item{% if current_url() == url_for('home') %} active{% endif %}">
            <a class="nav-link" href="{{ url_for('home') }}">Tableau de bord</a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="{{ url_for('logout') }}">Se d√©connecter</a>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container" style="margin-top: 15px;">
      {% if alert is defined and alert is not empty %}
        {% for key,messages in alert %}
          <div class="alert alert-dismissible alert-{{key}} container">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {% for msg in messages %}
              {{msg}}<br>
            {% endfor %}
          </div>
        {% endfor %}
      {% endif %}

      {% block content %}{% endblock %}
    </div>
    {% block javascript %}
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
      integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
      <script src="{{ url_for('home') }}assets/js/bundle.min.js" charset="utf-8"></script><!-- bundle.js for dev -->
    {% endblock %}
  </body>
</html>
