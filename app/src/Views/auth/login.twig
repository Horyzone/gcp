{% extends "layout-auth.twig" %}

{% block content %}

<form action="" method="post" class="form-signin text-center needs-validation" novalidate>
  <img class="mb-3" id="logo-login" alt="GCP">
  <h1 class="h3 mb-3 font-weight-normal">Veuillez vous identifier</h1>
  <label for="email" class="sr-only">Email</label>
  <input type="email" id="email" name="email" class="form-control" placeholder="Email" required autofocus>
  <label for="password" class="sr-only">Mot de passe</label>
  <input type="password" id="password" name="password" class="form-control" placeholder="Mot de passe" required>
  <div class="checkbox mb-3 text-left">
    <label>
      <input type="checkbox" name="remember" value="on"> Se souvenir de moi
    </label>
  </div>
  {{ csrf() }}
  <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
  {% if google %}
    <p class="margin-egal">ou</p>
    <a href="{{ url_for('google') }}" class="btn btn-lg btn-secondary btn-block">
      <span class="btn-icon fab fa-google"></span>
      Se connecter via Google
    </a>
  {% endif %}
  <p class="mt-3 mb-3 text-muted">&copy; 2020-{{ now|date("Y") }}</p>
</form>

{% endblock %}
